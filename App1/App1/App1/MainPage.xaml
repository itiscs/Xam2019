<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.MainPage">

    <ScrollView>
        <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Welcome to Xamarin.Forms!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label x:Name="txtHello" Margin="10,100,0,0" Text="Start developing now" FontSize="Title" Padding="30,10,30,10"/>

        <Button Margin="10,0,10,0" x:Name="btn1" Clicked="btn1_Clicked" Text="Кнопка"/>
        <Label Text="Make changes to your XAML file and save to see your UI update in the running app with XAML Hot Reload. Give it a try!" FontSize="16" Padding="30,0,30,0"/>
        <Button Margin="10,0,10,0" x:Name="btn2" Clicked="btn2_Clicked"  Text="На вторую страницу"/>


        </StackLayout>
    </ScrollView>


</ContentPage>
